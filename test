local colony = peripheral.wrap("top")
while true do
  local ok,reqs = pcall(function() return colony.getRequests() end)
  if not ok then print("getRequests() error") else
    print("Total requests: "..#reqs)
    for i,r in ipairs(reqs) do
      print(i, r.desc, r.state, r.count, r.target and r.target.name)
      if i>=10 then break end
    end
  end
  sleep(10)
end
