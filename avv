local colony = peripheral.wrap("top")

while true do
  local orders = colony.getWorkOrders()
  print("WorkOrders: "..#orders)
  for i,wo in ipairs(orders) do
    print("WO "..wo.id.." building="..tostring(wo.buildingName).." targetLevel="..tostring(wo.targetLevel))
    local res = colony.getWorkOrderResources(wo.id)
    for _,r in ipairs(res) do
      print("  "..(r.needed or 0).."x "..(r.item and r.item.name or "unknown").." status="..tostring(r.status))
    end
    if i>=3 then break end
  end
  sleep(10)
end
